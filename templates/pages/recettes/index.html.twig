{% extends 'base.html.twig' %}

{% block title %}Liste des Recettes{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 2em auto;
        max-width: 900px;
        font-family: "Segoe UI", Roboto, sans-serif;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    th, td {
        text-align: center;
        vertical-align: middle;
        padding: 10px 12px;
    }

    th {
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    tr:hover {
        background-color: #eaf2ff;
        transition: 0.3s;
    }

    .flash-container{
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
        width: 300px;
    }

    .icon-btn {
        border: none;
        background: none;
        cursor: pointer;
        font-size: 1.2rem;
        transition: transform 0.2s ease-in-out;
        margin: 0 5px;
    }

    .icon-btn.edit { color: #0d6efd; }
    .icon-btn.edit:hover { transform: scale(1.2); color: #0056b3; }

    .icon-btn.delete { color: #dc3545; }
    .icon-btn.delete:hover { transform: scale(1.2); color: #a71d2a; }

</style>

{# Messages flash #}
<div class="flash-container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mb-2 flash-message" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<div class="example-wrapper">
    <h2>Liste des Recettes disponibles dans notre Stock</h2>

    <div class="d-flex justify-content-between mb-3">
        <h5>Total Recettes : {{ recettes.getTotalItemCount }}</h5>
    </div>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-active">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Difficulté</th>
                <th>Description</th>
                <th>Date de Création</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for recette in recettes %}
                <tr>
                    <td>{{ recette.id }}</td>
                    <td>{{ recette.name }}</td>
                    <td>
                        {% if recette.price is null %}
                            <span class="text-muted fst-italic">Non renseigné</span>
                        {% else %}
                            {{ recette.price }} $
                        {% endif %}
                    </td>
                    <td>{{ recette.difficulty }}</td> 
                    <td>{{ recette.description }}</td>
                    <td>{{ recette.creatDat|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('update_recettes', { id: recette.id }) }}" title="Modifier" class="icon-btn edit">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a href="{{ path('delete_recettes', { id: recette.id }) }}" 
                           title="Supprimer" 
                           class="icon-btn delete"
                           onclick="return confirm('⚠️ Voulez-vous vraiment supprimer cette recette ?');">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted fst-italic">
                        Aucune recette disponible pour le moment.
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation mt-3 d-flex justify-content-center">
        {{ knp_pagination_render(recettes) }}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const alerts = document.querySelectorAll('.flash-message');
        alerts.forEach((alert) => {
            setTimeout(() => {
                alert.classList.remove('show');
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 500);
            }, 3000);
        });
    });
</script>

{# Import Font Awesome pour les icônes #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

{% endblock %}
