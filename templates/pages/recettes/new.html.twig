<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Formulaire de Recette</h3>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        {{ form_row(form.name) }}
                        {{ form_row(form.time) }}
                    </div>
                    
                    <div class="row">
                        {{ form_row(form.difficulty) }}
                        {{ form_row(form.nbrepersonne) }}
                    </div>
                    
                    <div class="row">
                        {{ form_row(form.price) }}
                        {{ form_row(form.ingredients) }}
                    </div>
					  
  					<div class="row">
     				 {{ form_row(form.isfavorite) }}
					  {{ form_row(form.ispublic) }}
      				{{ form_row(form.description) }}
  					</div>
  
                    
                    <div class="row">
                        {{ form_row(form.submit) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

		{{ form_end(form) }}
		</div>
</div>
{% endblock %}
